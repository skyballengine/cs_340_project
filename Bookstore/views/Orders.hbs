{{!-- The Data from our Database --}}
<h2>Orders</h2>

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.customer_id}}</td>
            <td>{{this.payment_id}}</td>
            <td>{{this.date}}</td>
            <td>{{this.total_price}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add an order</h2>
<p>To add a new order, please enter the information below and click `Submit`!</p>
<form id="add-order-form" method="POST" action="/add-order-form">
    <label for="input-customerid"> Customer ID: </label>
    <input type="number" name="input-customerid" id="input-customerid" required>

    <label for="input-paymentid">Payment ID: </label>
    <input type="number" name="input-paymentid" id="input-paymentid" required>

    <label for="input-date">Date: </label>
    <input type="date" name="input-date" id="input-date" required>

    <label for="input-totaldue">Total Due: </label>
    <input type="text" name="input-totaldue" id="input-totaldue" required>

    <input type="submit">
</form>

