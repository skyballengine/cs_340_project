{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.order_details_id}}</td>
            <td>{{this.book_id}}</td>
            <td>{{this.order_id}}</td>
            <td>{{this.book_quantity}}</td>
            <td>{{this.unit_price}}</td>
            <td>{{this.line_total}}</td>
            <td>{{this.status}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add a Customer using an HTML form</h2>
<p>To add a new Customer, please enter the information below and click `Submit`!</p>
<form id="add-od-form" method="POST" action="/add-od-form">
    <label for="input-bookid">Book ID: </label>
    <input type="number" name="input-bookid" id="input-book">
    
    <label for="input-orderid">Order ID: </label>
    <input type="text" name="input-orderid" id="input-orderid">

    <label for="input-bookquant">book quantity: </label>
    <input type="number" name="input-bookquant" id="input-bookquant">

     <label for="input-unit_price">unit_price: </label>
    <input type="number" step='0.01' name="input-unit_price" id="input-unit_price">

    <label for="input-line_total">line_total: </label>
    <input type="number" step='0.01' name="input-line_total" id="input-line_total">

    <label for="input-shipped">shipped: </label>
    <input type="bool" name="input-shipped" id="input-shipped">

    <input type="submit">
</form>
